// Genesis Kernel - Entry Point
// Microkernel for Genesis OS
// Phase 6: User Space Servers

// ============================================================
// Constants
// ============================================================

const VGA_BUFFER: i64 = 0xB8000;
const VGA_WIDTH: i64 = 80;
const VGA_HEIGHT: i64 = 25;

