fn shl_u64(value: u64, shift: u64) -> u64 {
    let mut result = value;
    result <<= shift;
    result
}

fn shr_u64(value: u64, shift: u64) -> u64 {
    let mut result = value;
    result >>= shift;
    result
}

fn bit_and(a: u64, b: u64) -> u64 {
    let mut result = a;
    result &= b;
    result
}

fn bit_or(a: u64, b: u64) -> u64 {
    let mut result = a;
    result |= b;
    result
}

fn bit_not(a: u64) -> u64 {
    let mut result = a;
    result ^= 0xFFFFFFFFFFFFFFFF;
    result
}

