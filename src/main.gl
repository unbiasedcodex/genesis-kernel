// VGA Console helper: write character at cursor and advance
fn console_putchar(ch: i64) {
    let mut cursor_x = read_u64_addr(CONSOLE_CURSOR_X) as i64;
    let mut cursor_y = read_u64_addr(CONSOLE_CURSOR_Y) as i64;

    let white: i64 = 0x0F;

    if ch == KEY_ENTER || ch == 10 {
        // Newline: move to next row
        cursor_x = 0;
        cursor_y = cursor_y + 1;
    } else if ch == KEY_BACKSPACE {
        // Backspace: move back if possible
        if cursor_x > 2 {  // Don't erase prompt "> "
            cursor_x = cursor_x - 1;
            vga_write_char_color(cursor_x, cursor_y, 32, white);  // Clear char
        }
    } else {
        // Regular character
        vga_write_char_color(cursor_x, cursor_y, ch, white);
        cursor_x = cursor_x + 1;
    }

    // Wrap at end of line
    if cursor_x >= VGA_WIDTH {
        cursor_x = 0;
        cursor_y = cursor_y + 1;
    }

    // Scroll if needed (simple: reset to start row)
    if cursor_y >= VGA_HEIGHT {
        cursor_y = CONSOLE_START_ROW;
        // Clear shell area
        shell_clear_area();
    }

    // Save cursor position
    write_u64_addr(CONSOLE_CURSOR_X, cursor_x as u64);
    write_u64_addr(CONSOLE_CURSOR_Y, cursor_y as u64);
}

// Clear the shell display area
fn shell_clear_area() {
    let white: i64 = 0x0F;
    let mut y = CONSOLE_START_ROW;
    while y < VGA_HEIGHT {
        let mut x: i64 = 0;
        while x < VGA_WIDTH {
            vga_write_char_color(x, y, 32, white);
            x = x + 1;
        }
        y = y + 1;
    }
}

