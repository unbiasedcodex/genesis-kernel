    let green: i64 = 0x0A;
    let cursor_x = read_u64_addr(CONSOLE_CURSOR_X) as i64;
    let cursor_y = read_u64_addr(CONSOLE_CURSOR_Y) as i64;

    vga_write_char_color(cursor_x, cursor_y, 62, green);      // >
    vga_write_char_color(cursor_x + 1, cursor_y, 32, green);  // space

    write_u64_addr(CONSOLE_CURSOR_X, (cursor_x + 2) as u64);
}

// Get character from shell line buffer
fn shell_line_get(idx: i64) -> i64 {
    read_byte_addr(SHELL_LINE_ADDR + idx)
}

// Set character in shell line buffer
fn shell_line_set(idx: i64, ch: i64) {
    write_byte_addr(SHELL_LINE_ADDR + idx, ch);
}

// Compare line buffer with command (up to 8 chars)
fn shell_cmd_match(c0: i64, c1: i64, c2: i64, c3: i64, c4: i64, c5: i64, c6: i64, c7: i64) -> bool {
    let b0 = shell_line_get(0);
    let b1 = shell_line_get(1);
    let b2 = shell_line_get(2);
    let b3 = shell_line_get(3);
    let b4 = shell_line_get(4);
    let b5 = shell_line_get(5);
    let b6 = shell_line_get(6);
    let b7 = shell_line_get(7);

    b0 == c0 && b1 == c1 && b2 == c2 && b3 == c3 &&
    b4 == c4 && b5 == c5 && b6 == c6 && b7 == c7
}

