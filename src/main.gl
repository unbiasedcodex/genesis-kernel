// User mode server A (runs in ring 3)
fn process_a() {
    // Print startup message using syscalls
    sys_print(91);   // [
    sys_print(65);   // A
    sys_print(93);   // ]
    sys_print(32);   // space

    // Counter for messages
    let mut counter: i64 = 0;

    loop {
        counter = counter + 1;

        // Send message to process B (PID 2) every 100 iterations
        if counter % 100 == 0 {
            sys_send(2, 65);  // Send 'A' character
        }

        // Check for incoming messages
        let msg = sys_recv();
        if msg >= 0 {
            sys_print(60);   // <
            sys_print(msg);  // Print the received character
            sys_print(62);   // >
        }

        sys_yield();  // Yield CPU (user mode friendly)
    }
}

// User mode server B (runs in ring 3)
fn process_b() {
    // Print startup message using syscalls
    sys_print(91);   // [
    sys_print(66);   // B
    sys_print(93);   // ]
    sys_print(32);   // space

    // Counter for messages
    let mut counter: i64 = 0;

    loop {
        counter = counter + 1;

        // Send message to process A (PID 1) every 150 iterations
        if counter % 150 == 0 {
            sys_send(1, 66);  // Send 'B' character
        }

        // Check for incoming messages
        let msg = sys_recv();
        if msg >= 0 {
            sys_print(60);   // <
            sys_print(msg);  // Print the received character
            sys_print(62);   // >
        }

        sys_yield();  // Yield CPU (user mode friendly)
    }
}

