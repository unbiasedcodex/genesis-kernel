// Command: run <filename> - execute ELF binary
fn cmd_run() {
    // Get filename starting at position 4 (after "run ")
    let c0 = shell_line_get(4);
    let c1 = shell_line_get(5);
    let c2 = shell_line_get(6);
    let c3 = shell_line_get(7);
    let c4 = shell_line_get(8);
    let c5 = shell_line_get(9);
    let c6 = shell_line_get(10);
    let c7 = shell_line_get(11);

    // Pack filename into u64 (little-endian)
    let name_lo = c0 + (c1 * 256) + (c2 * 65536) + (c3 * 16777216) +
                  (c4 * 0x100000000) + (c5 * 0x10000000000) +
                  (c6 * 0x1000000000000) + (c7 * 0x100000000000000);

    // Print "run: "
    console_print_str(114, 117, 110, 58, 32, 0, 0, 0);  // "run: "

    // Print filename
    if c0 > 0 { console_putchar(c0); }
    if c1 > 0 { console_putchar(c1); }
    if c2 > 0 { console_putchar(c2); }
    if c3 > 0 { console_putchar(c3); }
    if c4 > 0 { console_putchar(c4); }
    if c5 > 0 { console_putchar(c5); }
    if c6 > 0 { console_putchar(c6); }
    if c7 > 0 { console_putchar(c7); }
    console_putchar(10);  // newline

    // Execute the ELF file
    let result = sys_exec(name_lo);

    if result >= 0 {
        // Print "PID: N"
        console_print_str(80, 73, 68, 58, 32, 0, 0, 0);  // "PID: "
        console_putchar(48 + result);
        console_putchar(10);
    } else {
        // Print error
        console_print_str(69, 82, 82, 58, 32, 0, 0, 0);  // "ERR: "
        console_putchar(48 - result);  // error code as digit
        console_putchar(10);
    }
}

// Command: kill <pid> - send signal to process (Phase 11)
fn cmd_kill() {
    // Get PID from position 5 (after "kill ")
    let pid_char = shell_line_get(5);

    // Parse single-digit PID
    let pid = pid_char - 48;  // Convert ASCII to number

    if pid < 0 || pid >= MAX_PROCS {
        console_print_str(69, 82, 82, 58, 32, 80, 73, 68);  // "ERR: PID"
        console_putchar(10);
        return;
    }

    // Check if process is valid
    let state = pcb_get_state(pid);
    if state == ProcState::Unused || state == ProcState::Zombie {
        console_print_str(78, 79, 32, 80, 82, 79, 67, 0);  // "NO PROC"
        console_putchar(10);
        return;
    }

    // Check for optional signal number (default: SIGTERM=15)
    let mut signum: i64 = SIGTERM;
    let space_pos = shell_line_get(6);
    if space_pos == 32 {
        // Parse signal number
        let sig_char = shell_line_get(7);
        if sig_char >= 48 && sig_char <= 57 {
            signum = sig_char - 48;
            // Check for second digit
            let sig_char2 = shell_line_get(8);
            if sig_char2 >= 48 && sig_char2 <= 57 {
                signum = signum * 10 + (sig_char2 - 48);
            }
        }
    }

    // Print "kill: PID SIG"
    console_print_str(107, 105, 108, 108, 58, 32, 0, 0);  // "kill: "
    console_putchar(48 + pid);
    console_putchar(32);  // space
    if signum >= 10 {
        console_putchar(48 + (signum / 10));
    }
    console_putchar(48 + (signum % 10));
    console_putchar(10);

    // Send the signal
    let result = sys_kill(pid, signum);

    if result == 0 {
        console_print_str(79, 75, 0, 0, 0, 0, 0, 0);  // "OK"
        console_putchar(10);
    } else {
        console_print_str(69, 82, 82, 58, 32, 0, 0, 0);  // "ERR: "
        console_putchar(48 - result);  // error code as digit
        console_putchar(10);
    }
}

// Command: disk - show disk status (Phase 12)
fn cmd_disk() {
    // Get disk info via syscall wrappers
    let present = sys_disk_info(0);
    let total = sys_disk_info(1);

    // Print "Disk: "
    console_print_str(68, 105, 115, 107, 58, 32, 0, 0);

    if present == 0 {
        // Print "NO DISK"
        console_print_str(78, 79, 32, 68, 73, 83, 75, 0);
    } else {
        // Print "ATA PIO"
        console_print_str(65, 84, 65, 32, 80, 73, 79, 0);
        console_putchar(10);

        // Print "Sectors: <number>"
        console_print_str(83, 101, 99, 116, 111, 114, 115, 58);  // "Sectors:"
        console_putchar(32);

        // Print number
        console_print_dec(total);

        // Print " (~<size>MB)"
        console_putchar(32);
        console_putchar(40);  // (
        let mb = total / 2048;  // 512 bytes/sector, 1MB = 2048 sectors
        console_print_dec(mb);
        console_putchar(77);   // M
        console_putchar(66);   // B
        console_putchar(41);   // )
    }
    console_putchar(10);
}

// Command: sector <lba> - read and display sector (Phase 12)
fn cmd_sector() {
    // Check disk present
    let present = sys_disk_info(0);
    if present == 0 {
        console_print_str(78, 79, 32, 68, 73, 83, 75, 0);  // "NO DISK"
        console_putchar(10);
        return;
    }

    // Parse LBA from position 7 (after "sector ")
    let mut lba: i64 = 0;
    let mut pos: i64 = 7;
    let len = read_u64_addr(SHELL_LINE_LEN_ADDR) as i64;

    while pos < len {
        let ch = shell_line_get(pos);
        if ch >= 48 && ch <= 57 {
            lba = lba * 10 + (ch - 48);
            pos = pos + 1;
        } else {
            pos = len;  // Exit loop
        }
    }

    // Read sector to buffer
    let bytes = sys_disk_read(lba, 1, ATA_BUFFER_ADDR);

    if bytes < 0 {
        console_print_str(69, 82, 82, 58, 32, 0, 0, 0);  // "ERR: "
        console_print_dec(0 - bytes);
        console_putchar(10);
        return;
    }

    // Print "LBA <lba>:"
    console_print_str(76, 66, 65, 32, 0, 0, 0, 0);  // "LBA "
    console_print_dec(lba);
    console_putchar(58);  // :
    console_putchar(10);

    // Display first 64 bytes in hex
    let mut i: i64 = 0;
    while i < 64 {
        let byte = read_byte_addr(ATA_BUFFER_ADDR + i) as i64;
        // Print as hex (2 digits)
        let hi = byte / 16;
        let lo = byte - (hi * 16);
        if hi < 10 {
            console_putchar(48 + hi);
        } else {
            console_putchar(65 + hi - 10);
        }
        if lo < 10 {
            console_putchar(48 + lo);
        } else {
            console_putchar(65 + lo - 10);
        }
        console_putchar(32);  // space

        // Newline every 16 bytes
        let col = i + 1;
        let row_check = col / 16;
        let row_rem = col - (row_check * 16);
        if row_rem == 0 {
            console_putchar(10);
        }
        i = i + 1;
    }
}

// Helper: print decimal number to console
fn console_print_dec(value: i64) {
    if value == 0 {
        console_putchar(48);
        return;
    }

    let mut num = value;
    if num < 0 {
        console_putchar(45);  // '-'
        num = 0 - num;
    }

    // Count digits
    let mut temp = num;
    let mut digits: i64 = 0;
    while temp > 0 {
        temp = temp / 10;
        digits = digits + 1;
    }

    // Print digits (up to 10 digits)
    let mut divisor: i64 = 1;
    let mut d: i64 = 1;
    while d < digits {
        divisor = divisor * 10;
        d = d + 1;
    }

    while divisor > 0 {
        let digit = num / divisor;
        console_putchar(48 + digit);
        num = num - (digit * divisor);
        divisor = divisor / 10;
    }
}

// Syscall wrapper: read disk sectors (Phase 12)
fn sys_disk_read(lba: i64, count: i64, buffer: i64) -> i64 {
    let mut result: i64 = 0;
    unsafe {
        asm!(
            "int $$0x80",
            in("rax") SYS_DISK_READ,
            in("rdi") lba,
            in("rsi") count,
            in("rdx") buffer,
            lateout("rax") result,
            options(nostack, att_syntax)
        );
    }
    result
}

// Syscall wrapper: get disk info (Phase 12)
fn sys_disk_info(info_type: i64) -> i64 {
    let mut result: i64 = 0;
    unsafe {
        asm!(
            "int $$0x80",
            in("rax") SYS_DISK_INFO,
            in("rdi") info_type,
            lateout("rax") result,
            options(nostack, att_syntax)
        );
    }
    result
}

// Execute command in line buffer
fn shell_execute() {
    let len = read_u64_addr(SHELL_LINE_LEN_ADDR) as i64;

    // Only process non-empty commands
    if len > 0 {
        // Match commands
        // "help" = 104, 101, 108, 112
        if shell_cmd_match(104, 101, 108, 112, 0, 0, 0, 0) {
            cmd_help();
        }
        // "ps" = 112, 115
        else if shell_cmd_match(112, 115, 0, 0, 0, 0, 0, 0) {
            cmd_ps();
        }
        // "caps" = 99, 97, 112, 115
        else if shell_cmd_match(99, 97, 112, 115, 0, 0, 0, 0) {
            cmd_caps();
        }
        // "files" = 102, 105, 108, 101, 115
        else if shell_cmd_match(102, 105, 108, 101, 115, 0, 0, 0) {
            cmd_files();
        }
        // "echo " = 101, 99, 104, 111, 32
        else if shell_line_get(0) == 101 && shell_line_get(1) == 99 &&
                shell_line_get(2) == 104 && shell_line_get(3) == 111 &&
                shell_line_get(4) == 32 {
            cmd_echo();
        }
        // "clear" = 99, 108, 101, 97, 114
        else if shell_cmd_match(99, 108, 101, 97, 114, 0, 0, 0) {
            cmd_clear();
        }
        // "run " = 114, 117, 110, 32
        else if shell_line_get(0) == 114 && shell_line_get(1) == 117 &&
                shell_line_get(2) == 110 && shell_line_get(3) == 32 {
            cmd_run();
        }
        // "kill " = 107, 105, 108, 108, 32
        else if shell_line_get(0) == 107 && shell_line_get(1) == 105 &&
                shell_line_get(2) == 108 && shell_line_get(3) == 108 &&
                shell_line_get(4) == 32 {
            cmd_kill();
        }
        // "disk" = 100, 105, 115, 107
        else if shell_cmd_match(100, 105, 115, 107, 0, 0, 0, 0) {
            cmd_disk();
        }
        // "sector " = 115, 101, 99, 116, 111, 114, 32
        else if shell_line_get(0) == 115 && shell_line_get(1) == 101 &&
                shell_line_get(2) == 99 && shell_line_get(3) == 116 &&
                shell_line_get(4) == 111 && shell_line_get(5) == 114 &&
                shell_line_get(6) == 32 {
            cmd_sector();
        }
        else {
            // Unknown command
            console_print_str(63, 32, 0, 0, 0, 0, 0, 0);  // "? "
            // Echo first few chars
            let mut i: i64 = 0;
            while i < 8 && i < len {
                let ch = shell_line_get(i);
                if ch != 0 {
                    console_putchar(ch);
                }
                i = i + 1;
            }
            console_putchar(10);
        }
    }
}

// Shell process main function
fn process_shell() {
    // Print startup message to serial
    sys_print(91);   // [
    sys_print(83);   // S
    sys_print(72);   // H
    sys_print(69);   // E
    sys_print(76);   // L
    sys_print(76);   // L
    sys_print(93);   // ]
    sys_print(32);   // space

    // Initialize console state
    write_u64_addr(CONSOLE_CURSOR_X, 0);
    write_u64_addr(CONSOLE_CURSOR_Y, CONSOLE_START_ROW as u64);
    write_u64_addr(SHELL_LINE_LEN_ADDR, 0);

    // Clear shell area on VGA
    shell_clear_area();

    // Print welcome message
    let green: i64 = 0x0A;
    let white: i64 = 0x0F;

    // "Genesis Shell v0.0.12"
    vga_write_char_color(0, CONSOLE_START_ROW, 71, green);   // G
    vga_write_char_color(1, CONSOLE_START_ROW, 101, green);  // e
    vga_write_char_color(2, CONSOLE_START_ROW, 110, green);  // n
    vga_write_char_color(3, CONSOLE_START_ROW, 101, green);  // e
    vga_write_char_color(4, CONSOLE_START_ROW, 115, green);  // s
    vga_write_char_color(5, CONSOLE_START_ROW, 105, green);  // i
    vga_write_char_color(6, CONSOLE_START_ROW, 115, green);  // s
    vga_write_char_color(7, CONSOLE_START_ROW, 32, white);   // space
    vga_write_char_color(8, CONSOLE_START_ROW, 83, green);   // S
    vga_write_char_color(9, CONSOLE_START_ROW, 104, green);  // h
    vga_write_char_color(10, CONSOLE_START_ROW, 101, green); // e
    vga_write_char_color(11, CONSOLE_START_ROW, 108, green); // l
    vga_write_char_color(12, CONSOLE_START_ROW, 108, green); // l
    vga_write_char_color(13, CONSOLE_START_ROW, 32, white);  // space
    vga_write_char_color(14, CONSOLE_START_ROW, 118, white); // v
    vga_write_char_color(15, CONSOLE_START_ROW, 48, white);  // 0
    vga_write_char_color(16, CONSOLE_START_ROW, 46, white);  // .
    vga_write_char_color(17, CONSOLE_START_ROW, 48, white);  // 0
    vga_write_char_color(18, CONSOLE_START_ROW, 46, white);  // .
    vga_write_char_color(19, CONSOLE_START_ROW, 49, white);  // 1
    vga_write_char_color(20, CONSOLE_START_ROW, 50, white);  // 2

    // Move to next line and show prompt
    write_u64_addr(CONSOLE_CURSOR_X, 0);
    write_u64_addr(CONSOLE_CURSOR_Y, (CONSOLE_START_ROW + 1) as u64);
    shell_prompt();

    // Main shell loop
    loop {
        // Check for keyboard input
        let ch = sys_kb_read();
        if ch > 0 {
            let line_len = read_u64_addr(SHELL_LINE_LEN_ADDR) as i64;

            if ch == KEY_ENTER {
                // Execute command
                console_putchar(10);

                // Null-terminate line buffer
                shell_line_set(line_len, 0);

                // Execute
                shell_execute();

                // Clear line buffer
                write_u64_addr(SHELL_LINE_LEN_ADDR, 0);
                let mut i: i64 = 0;
                while i < SHELL_LINE_MAX {
                    shell_line_set(i, 0);
                    i = i + 1;
                }

                // Show new prompt
                shell_prompt();
            } else if ch == KEY_BACKSPACE {
                // Backspace: remove last char
                if line_len > 0 {
                    write_u64_addr(SHELL_LINE_LEN_ADDR, (line_len - 1) as u64);
                    shell_line_set(line_len - 1, 0);
                    console_putchar(ch);
                }
            } else if line_len < SHELL_LINE_MAX - 1 {
                // Regular character: add to buffer and display
                shell_line_set(line_len, ch);
                write_u64_addr(SHELL_LINE_LEN_ADDR, (line_len + 1) as u64);
                console_putchar(ch);

                // Also echo to serial for debugging
                sys_print(ch);
            }
        }

        sys_yield();
    }
}

