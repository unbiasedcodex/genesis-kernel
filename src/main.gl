    let len = read_u64_addr(SHELL_LINE_LEN_ADDR) as i64;
    // Skip "echo " (5 chars)
    let mut i: i64 = 5;
    while i < len {
        let ch = shell_line_get(i);
        if ch != 0 {
            console_putchar(ch);
        }
        i = i + 1;
    }
    console_putchar(10);
}

