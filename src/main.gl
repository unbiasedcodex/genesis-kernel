// Command: ps - show processes
fn cmd_ps() {
    // Print header
    console_print_str(80, 73, 68, 32, 83, 84, 65, 84);  // "PID STAT"
    console_putchar(10);

    // Print each process (use dynamic count)
    let num_procs = get_num_procs();
    let mut pid: i64 = 0;
    while pid < num_procs {
        let state = pcb_get_state(pid);
        if state != ProcState::Unused {
            // Print PID
            console_putchar(48 + pid);
            console_putchar(32);
            console_putchar(32);
            console_putchar(32);

            // Print state using match
            match state {
                ProcState::Unused => {},
                ProcState::Ready => console_print_str(82, 69, 65, 68, 89, 0, 0, 0),    // READY
                ProcState::Running => console_print_str(82, 85, 78, 0, 0, 0, 0, 0),    // RUN
                ProcState::Waiting => console_print_str(87, 65, 73, 84, 0, 0, 0, 0),   // WAIT
                ProcState::Zombie => console_print_str(90, 79, 77, 66, 73, 69, 0, 0),  // ZOMBIE
                ProcState::Stopped => console_print_str(83, 84, 79, 80, 0, 0, 0, 0),   // STOP
            }
            console_putchar(10);
        }
        pid = pid + 1;
    }
}

// Command: caps - show capabilities for current process
fn cmd_caps() {
    let pid = sys_getpid();

    console_print_str(67, 65, 80, 83, 32, 80, 0, 0);  // "CAPS P"
    console_putchar(48 + pid);
    console_putchar(58);
    console_putchar(10);

    // List capabilities (simplified)
    let mut i: i64 = 0;
    while i < 4 {
        let cap_type = cap_get_type(pid, i);
        if cap_type != CAP_TYPE_UNUSED {
            console_putchar(48 + i);  // index
            console_putchar(58);
            console_putchar(32);

            if cap_type == CAP_TYPE_ROOT {
                console_print_str(82, 79, 79, 84, 0, 0, 0, 0);  // ROOT
            } else if cap_type == CAP_TYPE_IPC {
                console_print_str(73, 80, 67, 0, 0, 0, 0, 0);   // IPC
            } else if cap_type == CAP_TYPE_FILE {
                console_print_str(70, 73, 76, 69, 0, 0, 0, 0);  // FILE
            }
            console_putchar(10);
        }
        i = i + 1;
    }
}

// Command: files - list files
fn cmd_files() {
    console_print_str(70, 105, 108, 101, 115, 58, 0, 0);  // "Files:"
    console_putchar(10);

    let used = read_u64_addr(RAMFS_SUPERBLOCK + SB_USED_FILES) as i64;
    let mut i: i64 = 0;
    while i < used {
        let entry_addr = RAMFS_FILE_TABLE + (i * RAMFS_FILE_ENTRY_SIZE);
        let flags = read_u64_addr(entry_addr + FE_FLAGS) as i64;
        if flags != FILE_UNUSED {
            // Print file index
            console_putchar(48 + i);
            console_putchar(58);
            console_putchar(32);

            // Read and print filename (first 8 chars)
            let name = read_u64_addr(entry_addr + FE_NAME);
            let c0 = (name % 256) as i64;
            let c1 = ((name / 256) % 256) as i64;
            let c2 = ((name / 65536) % 256) as i64;
            let c3 = ((name / 16777216) % 256) as i64;
            let c4 = ((name / 0x100000000) % 256) as i64;

            if c0 != 0 { console_putchar(c0); }
            if c1 != 0 { console_putchar(c1); }
            if c2 != 0 { console_putchar(c2); }
            if c3 != 0 { console_putchar(c3); }
            if c4 != 0 { console_putchar(c4); }

            // Print size
            console_putchar(32);
            console_putchar(40);  // (
            let size = read_u64_addr(entry_addr + FE_SIZE) as i64;
            if size < 10 {
                console_putchar(48 + size);
            } else {
                console_putchar(48 + (size / 10) % 10);
                console_putchar(48 + size % 10);
            }
            console_putchar(66);  // B
            console_putchar(41);  // )
            console_putchar(10);
        }
        i = i + 1;
    }
}

// Command: echo - echo remaining input
